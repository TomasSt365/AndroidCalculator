<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
       <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="resultTextStyle">
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/result_text</item>
        <item name="android:textSize">@dimen/resultSize</item>
    </style>

    <style name="resultTextStyleLand">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/result_text_land</item>
        <item name="android:textSize">@dimen/resultSize</item>
        <item name="android:background">@drawable/monitor</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/errorSize</item>
        <item name="android:textColor">@color/error_text</item>
    </style>

    <style name="errorTextStyleLand">
        <item name="android:background">@drawable/monitor</item>
        <item name="android:textSize">@dimen/errorSize</item>
        <item name="android:textColor">@color/error_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radioButtonInOptionStyle">
        <item name="android:textSize">@dimen/radioButtonSize</item>
    </style>

    <style name="optionText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/optionText</item>
        <item name="android:textColor">@color/optionTextColor</item>
    </style>
</resources>